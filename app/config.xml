<?xml version='1.0' encoding='utf-8'?>
<widget id="com.unicamp.cotuca.streetsmart" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Street Smart: Segurança nas Ruas</name>
    <description>
        Se mantenha mais seguro em vias públicas visualizando o quão segura ou perigosa é uma região, podendo decidir se é melhor evitá-la ou não, baseado nessa informação.
    </description>
    <author email="diego.daniel.lockn@gmail.com" href="https://github.com/Lock-n">
        Diego Daniel
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="GOOGLE_MAPS_ANDROID_API_KEY" value="AIzaSyDn0gFwQ9wWVjFofAuxZVKh8-Pfqg_Y5yM" />
    <preference name="GOOGLE_MAPS_IOS_API_KEY" value="AIzaSyDn0gFwQ9wWVjFofAuxZVKh8-Pfqg_Y5yM" />
    <preference name="StatusBarBackgroundColor" value="#FAFAFA" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="KeyboardResizeMode" value="native" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^7.1.4" />
</widget>
